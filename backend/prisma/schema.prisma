generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Word {
  id        Int    @id @default(autoincrement())
  kata      String
  makna     String
  jenisKata String

  @@map("words")
}

model Collection {
  id     Int    @id @default(autoincrement())
  wordId Int
  email  String

  @@unique([wordId, email])
  @@map("collections")
}
